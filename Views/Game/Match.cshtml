@model IEnumerable<MatchingGameApp.Models.GameItem>

<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/site.css">
    <title>Memory Game</title>
</head>
<body>
    <h1>Memory Game - @ViewData["Category"]</h1>

    <!-- Score Display -->
    <div id="score">Score: 0</div>

    <!-- Feedback Message -->
    <div id="feedback-message"></div>

    <!-- Selected Cards Slots -->
    <div id="selected-cards">
        <div class="big-slot" id="slot-1"></div>
        <div class="big-slot" id="slot-2"></div>
    </div>

    <!-- Game Board -->
    <div id="game-board" data-category="@ViewData["Category"]">
        <!-- Cards will be rendered dynamically -->
    </div>

    <script>
        // Initialize the game when the page loads
        document.addEventListener("DOMContentLoaded", function () {
            initializeGame(); // Fetch a random category and render the game board
        });
    </script>

    <script src="/js/memory-game.js"></script>
</body>
</html>


