@model IEnumerable<MatchingGameApp.Models.GameItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/site.css">
    <title>Memory Game</title>
</head>
<body>
    <h1>Memory Game</h1>
    <!-- Top slots for selected cards -->
    <div id="selected-cards">
        <div class="big-slot" id="slot-1"></div>
        <div class="big-slot" id="slot-2"></div>
    </div>

    <div id="feedback-message"></div>
    <!-- Game grid -->
    <div id="game-board">
        <!-- Cards will be rendered dynamically -->
    </div>

    <script src="/js/memory-game.js"></script>
</body>
</html>


