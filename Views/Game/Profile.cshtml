@model IEnumerable<MatchingGameApp.Models.Score>

<div class="container py-5">
    <div class="row justify-content-center align-items-center">
        <!-- Profile Picture Section -->
        <div class="col-md-4 text-center">
            <img src="@ViewData["ProfilePicture"]"
                 alt="Profile Picture"
                 class="rounded-circle shadow-lg"
                 style="width: 250px; height: 250px; object-fit: cover;"
                 onerror="this.onerror=null;this.src='/images/profile-default.png';">
            <h1 class="mt-3 fw-bold text-primary">@ViewData["UserName"]'s Profile</h1>
            <!-- Button to navigate to Update Picture page -->
            <a href="/Game/UpdatePicture" class="btn btn-primary mt-3">Update Profile Picture</a>
        </div>
    </div>

    <!-- Game History -->
    <div class="row mt-5">
        <div class="col-md-12">
            <h2 class="mb-3">Game History</h2>
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-dark">
                    <tr class="text-center">
                        <th>Score</th>
                        <th>Date</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var score in Model)
                    {
                        <tr>
                            <td>@score.Points</td>
                            <td>@score.DateAchieved.ToLocalTime()</td>
                            <td>@score.Category</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
