@model List<string>

<h1 class="text-center">Select a Category</h1>
<div class="category-grid">
    @foreach (var category in Model)
    {
        <form method="get" action="/Game/Match" class="category-card">
            <input type="hidden" name="category" value="@category" />
            <button type="submit" class="category-card-button">
                <img src="/images/@category.ToLower().Replace(" ", "_")_icon.png" alt="@category" />
                <span>@category</span>
            </button>
        </form>
    }
</div>


