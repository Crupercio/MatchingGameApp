@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="display-4 fw-bold text-primary">🎉 Welcome to FunLand! 🎉</h1>
    </div>

    <!-- Content Section -->
    <div class="row align-items-center">
        <!-- Left Image -->
        <div class="col-md-4 text-center mb-3 mb-md-0">
            <img src="/images/left-image.png" alt="Kids Playing" class="img-fluid rounded shadow-lg">
        </div>

        <!-- Introductory Text -->
        <div class="col-md-4">
            <p class="lead text-muted text-center">
                Welcome to FunLand, a vibrant platform for kids to learn, play, and grow! Enjoy engaging games like
                matching pairs, sorting challenges, and brain puzzles. Every activity is designed to entertain and
                educate, making learning fun for everyone!
            </p>
        </div>

        <!-- Right Image -->
        <div class="col-md-4 text-center">
            <img src="/images/right-image.png" alt="Learning Fun" class="img-fluid rounded shadow-lg">
        </div>
    </div>
</div>
